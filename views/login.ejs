<% include header.ejs %>
<div class="container">
    <div class="card mt-5 text-light bg-dark shadow-lg">
        <div class="card-header">
            <h2 class="card-title">Elecciones 2019</h2>
        </div>
        <div class="card text-primary shadow-lg">
            <div class="card-body">
                <div class="card-title col-md-6 col-lg-6">
                    <h3>Ingresar a Votar</h3>
                </div>
                <div class="formLog col-md-6 col-lg-6">
                    <form action="/users" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="logname" 
                            placeholder="Nombre" required>
                            <input class="form-control" type="text" name="logdni" 
                            placeholder="DNI" required>
                            <select class="form-control" name="logsex">
                                <option value ="male">Hombre</option>
                                <option value ="female">Mujer</option>    
                            </select>
                        </div>
                        <div class="btnLog">
                            <input class="btn btn-success btn-lg" type="submit" value="VOTAR">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>